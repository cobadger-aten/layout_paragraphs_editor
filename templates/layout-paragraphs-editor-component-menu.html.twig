<div class="lpe-component-menu">
  <h4 class="visually-hidden">{{ 'Add Item'|t }}</h4>
  <div class="lpe-component-menu__search">
    <input class="lpe-component-menu-search-input" type="text" placeholder="Filter items..." />
  </div>
  <div class="lpe-component-menu__group">
    {% if types.layout %}
    <div class="lpe-component-menu__group--layout">
    {% endif %}
    {% for type in types.layout %}
      <div class="lpe-component-menu__item type-{{type.id}} is-layout">
        <a class="lpe-component-menu__action" data-type="{{ type.id }}" href="#{{ type.id }}" title="{{ type.title }}">
        {% if type.image %}
        <img src="{{ type.image }}" alt ="" />
        {% endif %}
        <div>{{ type.name }}</div>
        </a>
      </div>
    {% endfor %}
    {% if types.layout %}
    </div>
    {% endif %}
    {% if types.content %}
    <div class="lpe-component-menu__group--content">
    {% endif %}
    {% for type in types.content %}
      <div class="lpe-component-menu__item type-{{type.id}}">
        <a class="lpe-component-menu__action" data-type="{{ type.id }}" href="#{{ type.id }}" title="{{ type.title }}">
        {% if type.image %}
        <img src="{{ type.image }}" alt ="" />
        {% endif %}
        <div>{{ type.name }}</div>
        </a>
      </div>
    {% endfor %}
    {% if types.content %}
    </div>
    {% endif %}
  </div>
</div>