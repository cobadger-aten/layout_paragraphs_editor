<div class="lp-editor__section-menu">
  <h4 class="visually-hidden">{{ 'Add Section'|t }}</h4>
  <div class="lp-editor__section-menu--group">
    {% for type in types %}
      <div class="lp-editor__section-menu--item type-{{type.id}} is-layout">
        <a class="lp-editor__section-menu--action" data-type="{{ type.id }}" href="#{{ type.id }}" title="{{ type.title }}">
        {% if type.image %}
        <img src="{{ type.image }}" alt ="" />
        {% endif %}
        <div>{{ type.title }}</div>
        </a>
      </div>
    {% endfor %}
  </div>
</div>